<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.fjdeveloper.calculadora.Cacluladora">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#606060"
        android:text="43.93 "
        android:gravity="right|bottom"
        android:textSize="50dp"
        android:textColor="#202020"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MC" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="MR" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="MS" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="M+" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="M-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="<-" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="CE" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="C" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="+-" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="sqrt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_weight="80dp"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="/" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="*" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1/x" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="1" />

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="2" />

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="3" />

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="-" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="0" />

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="." />

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="+" />
    </LinearLayout>


</LinearLayout>
